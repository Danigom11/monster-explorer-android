<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:paddingTop="48dp"
    tools:context=".PantallaCargaFragment"
    android:id="@+id/fragmentCarga">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="32dp">

        <!-- Título con animación -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="Monster Explorer"
            android:textColor="@color/white"
            android:textSize="42sp"
            android:textStyle="bold"
            android:shadowColor="#40000000"
            android:shadowDx="2"
            android:shadowDy="4"
            android:shadowRadius="8"
            android:letterSpacing="0.05"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="¡Atrapa a todos!"
            android:textColor="@color/acento"
            android:textSize="20sp"
            android:textStyle="italic"
            android:shadowColor="#40000000"
            android:shadowDx="1"
            android:shadowDy="2"
            android:shadowRadius="4"
            android:layout_marginBottom="48dp"/>

        <!-- Imagen principal -->
        <androidx.cardview.widget.CardView
            android:layout_width="280dp"
            android:layout_height="280dp"
            android:layout_gravity="center_horizontal"
            app:cardCornerRadius="140dp"
            app:cardElevation="16dp"
            android:layout_marginBottom="32dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/imagen_carga"
                android:contentDescription="Pokemon Logo" />
        </androidx.cardview.widget.CardView>

        <!-- Indicador de carga -->
        <ProgressBar
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:indeterminateTint="@color/acento"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Cargando aventura..."
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            android:alpha="0.9"/>

    </LinearLayout>

</FrameLayout>